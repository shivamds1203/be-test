generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

enum QuestionType {
  MCQ
  SUBJECTIVE
}

enum AttemptStatus {
  PENDING
  COMPLETED
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  role         Role     @default(STUDENT)
  profileImage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  examsCreated Exam[]        @relation("ExamCreator")
  attempts     ExamAttempt[]
  payments     Payment[]
}

model Exam {
  id               String   @id @default(uuid())
  title            String
  description      String?
  timeLimitMinutes Int
  marksPerQuestion Int
  price            Float    @default(0)
  isPublished      Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  createdById String
  createdBy   User   @relation("ExamCreator", fields: [createdById], references: [id])

  questions Question[]
  attempts  ExamAttempt[]
  payments  Payment[]
}

model Question {
  id                 String       @id @default(uuid())
  examId             String
  type               QuestionType
  text               String
  options            Json? // Array of strings if MCQ
  correctOptionIndex Int? // Valid if MCQ
  explanation        String?

  exam    Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  answers Answer[]
}

model ExamAttempt {
  id               String        @id @default(uuid())
  userId           String
  examId           String
  score            Int           @default(0)
  percentage       Float         @default(0)
  timeTakenSeconds Int           @default(0)
  status           AttemptStatus @default(PENDING)
  submittedAt      DateTime?
  startedAt        DateTime      @default(now())

  user    User     @relation(fields: [userId], references: [id])
  exam    Exam     @relation(fields: [examId], references: [id])
  answers Answer[]
}

model Answer {
  id                  String   @id @default(uuid())
  attemptId           String
  questionId          String
  selectedOptionIndex Int?
  subjectiveText      String?
  isCorrect           Boolean?

  attempt  ExamAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question Question    @relation(fields: [questionId], references: [id])
}

model Payment {
  id              String   @id @default(uuid())
  userId          String
  examId          String
  stripePaymentId String?
  amount          Float
  status          String   @default("SUCCESS")
  date            DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  exam Exam @relation(fields: [examId], references: [id])
}
